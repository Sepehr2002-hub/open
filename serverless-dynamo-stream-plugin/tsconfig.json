{
  "baseUrl": ".",
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "lib": [
      "esnext"
    ],
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "strictNullChecks": true,
    "target": "esnext"
  },
  "exclude": [
    ".idea",
    "node_modules",
    "dist"
  ],
  "include": [
    "src/**/*"
  ],
  "paths": {
    "@/*": [
      "src/*"
    ]
  }
}
